<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.garageActivity.fragments.CarFragment">

        <ImageView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/frontWheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/body"
        app:layout_constraintBottom_toBottomOf="@id/body"
        app:layout_constraintLeft_toLeftOf="@id/body"
        app:layout_constraintRight_toRightOf="@id/body"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.965"/>

    <ImageView
        android:id="@+id/backWheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/body"
        app:layout_constraintBottom_toBottomOf="@id/body"
        app:layout_constraintLeft_toLeftOf="@id/body"
        app:layout_constraintRight_toRightOf="@id/body"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.26"/>

    <ImageView
        android:id="@+id/component1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.6"/>

    <ImageView
        android:id="@+id/component2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.65"/>


</androidx.constraintlayout.widget.ConstraintLayout>